        android:supportsRtl="true"
        android:theme="@style/Theme.GymBudd">
        <activity android:name=".ResetPasswordActivity"></activity>
        <activity
            android:name=".ViewFriendActivity"
            android:exported="false" />
        <activity
            android:name=".Workouts"
